{
  "name": "@audit-log-and-activity-tracking-saas/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "docker:up": "docker-compose -f docker-compose.local.yml up -d",
    "docker:down": "docker-compose -f docker-compose.local.yml down",
    "docker:logs": "docker-compose -f docker-compose.local.yml logs -f postgres",
    "docker:reset": "docker-compose -f docker-compose.local.yml down -v && docker-compose -f docker-compose.local.yml up -d",
    "docker:all": "docker-compose up -d",
    "docker:all:down": "docker-compose down",
    "serve:api": "node scripts/set-nx-cache.js nx serve api",
    "dev:web": "cross-env PORT=3000 pnpm nx dev web",
    "dev:marketing": "cross-env PORT=3001 pnpm nx dev marketing",
    "dev": "concurrently -n \"API,WEB,MARKETING\" -c \"blue,green,yellow\" \"pnpm serve:api\" \"pnpm dev:web\" \"pnpm dev:marketing\"",
    "build:api": "node scripts/set-nx-cache.js nx build api",
    "build:web": "pnpm nx build web",
    "start:api": "node scripts/set-nx-cache.js nx serve api",
    "start:web": "cross-env PORT=3000 pnpm nx start web"
  },
  "private": true,
