  "scripts": {
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "serve:api": "node scripts/set-nx-cache.js nx serve api",
    "dev:web": "cross-env PORT=3000 pnpm nx dev web",
    "dev": "concurrently -n \"API,WEB\" -c \"blue,green\" \"pnpm serve:api\" \"pnpm dev:web\"",
    "build:api": "node scripts/set-nx-cache.js nx build api",
    "build:web": "pnpm nx build web",
    "start:api": "node scripts/set-nx-cache.js nx serve api",
    "start:web": "cross-env PORT=3000 pnpm nx start web"
  },
