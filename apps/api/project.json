{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/api"],
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/api"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/api/package.json",
        "{workspaceRoot}/dist/apps/api/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/api/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec ts-node --project apps/api/tsconfig.migration.json -r tsconfig-paths/register apps/api/scripts/migration-wrapper.ts create",
        "forwardAllArgs": true,
        "cwd": "{workspaceRoot}"
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec ts-node --project apps/api/tsconfig.migration.json -r tsconfig-paths/register apps/api/scripts/migration-wrapper.ts generate",
        "forwardAllArgs": true,
        "cwd": "{workspaceRoot}"
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec ts-node --project apps/api/tsconfig.migration.json -r tsconfig-paths/register apps/api/scripts/migration-wrapper.ts run",
        "cwd": "{workspaceRoot}"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec ts-node --project apps/api/tsconfig.migration.json -r tsconfig-paths/register apps/api/scripts/migration-wrapper.ts revert",
        "cwd": "{workspaceRoot}"
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx apps/api/scripts/seed-simple.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "verify-user": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx apps/api/scripts/verify-user.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "reset-admin-password": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx apps/api/scripts/reset-admin-password.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "add-audit-events": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx apps/api/scripts/add-audit-events.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "webhook-worker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx apps/api/scripts/webhook-worker.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:app", "scope:api"],
}
